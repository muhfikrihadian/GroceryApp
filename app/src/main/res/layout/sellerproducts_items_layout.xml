<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@color/backgroundCardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:id="@+id/rell"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:background="@color/colorfav">
            <TextView
                android:id="@+id/seller_product_state"
                android:layout_width="80dp"
                android:layout_height="13dp"
                android:gravity="center"
                android:text="Status Product"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="8sp"
                android:textStyle="bold"
                android:textColor="@color/colorfav"
                android:background="@drawable/rounded_shape4"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/seller_select_product_image"
            android:layout_width="match_parent"
            android:layout_below="@+id/rell"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/seller_shop_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nama Toko"
            android:textAllCaps="true"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorfav"
            android:layout_below="@+id/seller_select_product_image"/>
        <LinearLayout
            android:id="@+id/linearname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seller_shop_name"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/seller_product_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Nama Produk"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/colorText"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearname"
            android:gravity="center">
            <TextView
                android:id="@+id/seller_product_price"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Rp 15000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>