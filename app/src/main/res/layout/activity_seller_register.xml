<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sellers.SellerRegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <ImageView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo_app_nobg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/seller_register_nama"
                    android:layout_width="349dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:background="#F1F1F1"
                    android:focusable="true"
                    android:gravity="top"
                    android:hint="   Nama Toko"
                    android:inputType="textPersonName"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/seller_register_nohp"
                    android:layout_width="349dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:background="#F1F1F1"
                    android:focusable="true"
                    android:gravity="top"
                    android:hint="   No.HP"
                    android:inputType="number"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/seller_register_email"
                    android:layout_width="349dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:background="#F1F1F1"
                    android:focusable="true"
                    android:gravity="top"
                    android:hint="   Email"
                    android:inputType="textEmailAddress"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/seller_register_password"
                    android:layout_width="349dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:background="#F1F1F1"
                    android:focusable="true"
                    android:gravity="top"
                    android:hint="   Password"
                    android:inputType="textPassword"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/seller_register_alamat"
                    android:layout_width="349dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:background="#F1F1F1"
                    android:focusable="true"
                    android:gravity="top"
                    android:hint="   Alamat Toko"
                    android:inputType="textMultiLine"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/seller_register_btn"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rounded_shape"
                    android:text="sign up"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>